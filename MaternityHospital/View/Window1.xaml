<Window x:Class="MaternityHospital.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaternityHospital"
        mc:Ignorable="d"
        Title="общие сведения" Height="450" Width="800">
    <Grid Margin="-3,0,3,0">
        <ComboBox x:Name="plod" HorizontalAlignment="Left" Margin="41,70,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged_1">
            <TextBlock Text="двойня"/>
            <TextBlock Text="тройня"/>
            <TextBlock Text="один"/>
        </ComboBox>
        <ComboBox HorizontalAlignment="Left" Margin="41,168,0,0" VerticalAlignment="Top" Width="120">
            <TextBlock Text="косое"/>
            <TextBlock Text="продольное"/>
            <TextBlock Text="поперечное"/>
        </ComboBox>
        <ComboBox HorizontalAlignment="Left" Margin="41,269,0,0" VerticalAlignment="Top" Width="120">
            <TextBlock Text="тазовое"/>
            <TextBlock Text="головное"/>
        </ComboBox>
        <ComboBox HorizontalAlignment="Left" Margin="378,168,0,0" VerticalAlignment="Top" Width="120">
            <TextBlock Text="синусовый"/>
            <TextBlock Text="брадикардия"/>
            <TextBlock Text="тахикардия"/>
            <TextBlock Text="..."/>
        </ComboBox>
        <ComboBox HorizontalAlignment="Left" Margin="383,264,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged">
            <TextBlock Text="да, меньше 3 эпизодов"/>
            <TextBlock Text="да, >= 3 эпизода"/>
            <TextBlock Text="нет"/>
        </ComboBox>
        <ComboBox HorizontalAlignment="Left" Margin="383,368,0,0" VerticalAlignment="Top" Width="120">
            <TextBlock Text="да, меньше 30 сек"/>
            <TextBlock Text="да, 30 и более сек"/>
            <TextBlock Text="нет"/>
        </ComboBox>
        <ComboBox HorizontalAlignment="Left" Margin="41,373,0,0" VerticalAlignment="Top" Width="120">
            <TextBlock Text="да"/>
            <TextBlock Text="нет"/>
        </ComboBox>
        <Label Content="положение" HorizontalAlignment="Left" Margin="41,119,0,0" VerticalAlignment="Top" Width="120" Height="33"/>
        <Label Content="плод&#xD;&#xA;" HorizontalAlignment="Left" Margin="41,28,0,0" VerticalAlignment="Top" Width="120" Height="37" HorizontalContentAlignment="Left" VerticalContentAlignment="Top"/>
        <Label Content="предлежание&#xD;&#xA;" HorizontalAlignment="Left" Margin="41,227,0,0" VerticalAlignment="Top" Width="120" Height="25"/>
        <Label Content="движение&#xD;&#xA;" HorizontalAlignment="Left" Margin="383,219,0,0" VerticalAlignment="Top" Width="120" Height="33"/>
        <Label Content="ЧСС&#xD;&#xA;" HorizontalAlignment="Left" Margin="383,36,0,0" VerticalAlignment="Top" Width="109" Height="29"/>
        <Label Content="ритм&#xD;&#xA;" HorizontalAlignment="Left" Margin="383,124,0,0" VerticalAlignment="Top" Width="120" Height="28"/>
        <Label Content="дыхательное движение&#xD;&#xA;" HorizontalAlignment="Left" Margin="383,325,0,0" VerticalAlignment="Top" Width="148" Height="43"/>
        <Label Content="серцебиение&#xD;&#xA;" HorizontalAlignment="Left" Margin="41,325,0,0" VerticalAlignment="Top" Width="120" Height="43"/>
        <TextBox InputMethod.IsInputMethodEnabled="False" MaxLength="3" PreviewTextInput="limitnumber" HorizontalAlignment="Left" Margin="375,70,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="128" Height="22"/>
        <ComboBox x:Name="plod_Copy" HorizontalAlignment="Left" Margin="190,70,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged_1" Visibility="Hidden">
            <TextBlock Text="двойня"/>
            <TextBlock Text="тройня"/>
            <TextBlock Text="один"/>
        </ComboBox>


    </Grid>
</Window>
