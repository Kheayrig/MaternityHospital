<Window x:Class="MaternityHospital.View.Windows.CreatePatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaternityHospital.View.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Добавить пациентку" Height="380" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="FIOlabel" Grid.Row="0" Content="Фамилия Имя Отчество:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Width="150"/>
        <TextBox x:Name="fioTextBox" Grid.Row="0" InputMethod.IsInputMethodEnabled="False" VerticalAlignment="Center" Width="253" Height="22" HorizontalAlignment="Left" Margin="160,0,0,0"/>

        <Label x:Name="BirthdayLabel" Grid.Row="1" Content="Дата рождения:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <DatePicker x:Name="birthdayDatePicker" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FirstDayOfWeek="Monday" Margin="10,0,0,0"/>

        <Label x:Name="AddressLabel" Grid.Row="2" Content="Адрес:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <TextBox x:Name="AddressTextBox" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="392" Height="22" Margin="88,0,0,0" Grid.ColumnSpan="2"/>

        <Label x:Name="LastPeriodLabel" Grid.Row="3" Content="Дата последних месячных:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <DatePicker x:Name="LastPeriodDatePicker" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center" FirstDayOfWeek="Monday" Margin="10,0,0,0"/>

        <Label x:Name="FirstScanDateLabel" Grid.Row="4" Content="Дата сканирования:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <DatePicker x:Name="FirstScanDatePicker" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Center" FirstDayOfWeek="Monday" Margin="135,0,0,0"/>
        <CheckBox x:Name="DysmenorrheaCheckBox" Content="Дисменорея" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="4" VerticalAlignment="Center"/>


        <Button x:Name="OK" Content="OK" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center" Height="23" Width="108" Click="OK_Click" Grid.ColumnSpan="2" Margin="80,0,0,0"/>
        <Button x:Name="Cancel" Grid.Row="5" HorizontalAlignment="Right" VerticalAlignment="Center" Height="23" Width="106" Click="Cancel_Click" Content="Отмена" Margin="0,0,80,0"/>

    </Grid>
</Window>
