<Window x:Class="MaternityHospital.View.Windows.CreatePatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaternityHospital.View.Windows"
        mc:Ignorable="d"
        Title="CreatePatient" Height="295" Width="475">
    <Grid>
        <Label x:Name="FIOlabel" Content="Фамилия Имя Отчество" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="fioTextBox" HorizontalAlignment="Left" Margin="186,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="253" Height="22"/>
        <Label x:Name="FIOlabel_Copy" Content="Серия паспорта" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top"/>
        <Label x:Name="FIOlabel_Copy1" Content="Номер паспорта" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top"/>
        <Label x:Name="FIOlabel_Copy2" Content="Дата рождения" HorizontalAlignment="Left" Margin="10,143,0,0" VerticalAlignment="Top"/>
        <TextBox InputMethod.IsInputMethodEnabled="False" MaxLength="4" x:Name="passportSeriaTextBox" HorizontalAlignment="Left" Margin="186,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" Height="22"/>
        <TextBox InputMethod.IsInputMethodEnabled="False" MaxLength="6" x:Name="passportNumberTextBox" HorizontalAlignment="Left" Margin="186,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" Height="22"/>
        <DatePicker x:Name="birthdayDatePicker" HorizontalAlignment="Left" Margin="186,145,0,0" VerticalAlignment="Top" FirstDayOfWeek="Monday"/>
        <Button x:Name="OK" Content="OK" HorizontalAlignment="Left" Margin="80,217,0,0" VerticalAlignment="Top" Height="23" Width="107" Click="OK_Click"/>
        <Button x:Name="Cancel" HorizontalAlignment="Left" Margin="259,217,0,0" VerticalAlignment="Top" Height="23" Width="107" Click="Cancel_Click" Content="Отмена"/>

    </Grid>
</Window>
